(use "arena.un")

(bind buffer (arena item capacity) (
	(uid (size ptr result off) (
		(reg size)
		(reg result)
		(reg ptr)
		(mov size item)
		(mul size size capacity)
		(mov result (flat (alloc arena 18)))
		(mov ptr (flat (alloc arena size)))
		(reg off)
		(mov off result)
		(mov (at off) 0)
		(add off off 8)
		(mov (at off) capacity)
		(add off off 8)
		(mov (at off) ptr)
		(result)
	))
))
